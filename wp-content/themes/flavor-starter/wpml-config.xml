<?xml version="1.0" encoding="UTF-8"?>
<wpml-config>
    <!--
        WPML Configuration File for Flavor Starter Theme
        This file tells WPML which theme elements should be translatable
    -->

    <!-- Theme text strings -->
    <admin-texts>
        <!-- Customizer settings -->
        <key name="theme_mods_flavor-starter">
            <key name="*" />
        </key>

        <!-- Theme options -->
        <key name="flavor_theme_options">
            <key name="*" />
        </key>
    </admin-texts>

    <!-- Custom Fields (Post Meta) -->
    <custom-fields>
        <!-- Article subtitle -->
        <custom-field action="translate">_subtitle</custom-field>

        <!-- Featured/Editors' Pick flags (copy, don't translate) -->
        <custom-field action="copy">_is_featured</custom-field>
        <custom-field action="copy">_is_editors_pick</custom-field>

        <!-- Reading time (copy, will be recalculated per language) -->
        <custom-field action="copy">_reading_time</custom-field>

        <!-- Audio attachment ID (copy if same audio for all languages) -->
        <custom-field action="copy">_article_audio_id</custom-field>

        <!-- View count (copy to maintain consistency) -->
        <custom-field action="copy">_post_views_count</custom-field>
    </custom-fields>

    <!-- Custom Taxonomies -->
    <taxonomies>
        <!-- Article Type taxonomy -->
        <taxonomy translate="1">article_type</taxonomy>

        <!-- Region taxonomy -->
        <taxonomy translate="1">region</taxonomy>
    </taxonomies>

    <!-- Custom Types (if we add custom post types later) -->
    <custom-types>
        <!-- Posts are translatable by default -->
        <custom-type translate="1">post</custom-type>

        <!-- Pages are translatable by default -->
        <custom-type translate="1">page</custom-type>
    </custom-types>

    <!-- Language Switcher Settings -->
    <language-switcher-settings>
        <!-- Display language switcher in navigation -->
        <key name="languages_order" />
    </language-switcher-settings>

    <!-- Built-in Shortcodes -->
    <shortcodes>
        <!-- If we create custom shortcodes, list them here -->
        <!-- Example: <shortcode>newsletter_signup</shortcode> -->
    </shortcodes>

    <!-- Theme Localization -->
    <built-with-toolset>
        <!-- Set to 1 if using Toolset, 0 otherwise -->
        0
    </built-with-toolset>

</wpml-config>
